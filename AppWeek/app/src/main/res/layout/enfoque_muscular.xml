<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_general" />

    <TextView
        android:id="@+id/titulo_calendario5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calendario"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo_lunes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="LUNES"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_calendario5" />

    <TextView
        android:id="@+id/titulo_enfoque_muscular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Escoge enfoque muscular"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/titulo_lunes3"
        app:layout_constraintStart_toStartOf="@+id/titulo_lunes3"
        app:layout_constraintTop_toBottomOf="@+id/titulo_lunes3" />

    <Button
        android:id="@+id/btn_biceps"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="62dp"
        android:text="BICEPS"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/titulo_enfoque_muscular"
        app:layout_constraintStart_toStartOf="@+id/titulo_enfoque_muscular"
        app:layout_constraintTop_toBottomOf="@+id/titulo_enfoque_muscular" />

    <Button
        android:id="@+id/btn_triceps"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="TRICEPS"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/btn_biceps"
        app:layout_constraintStart_toStartOf="@+id/btn_biceps"
        app:layout_constraintTop_toBottomOf="@+id/btn_biceps" />

    <Button
        android:id="@+id/btn_hombros"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="HOMBROS"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/btn_triceps"
        app:layout_constraintStart_toStartOf="@+id/btn_triceps"
        app:layout_constraintTop_toBottomOf="@+id/btn_triceps" />

    <Button
        android:id="@+id/btn_antebrazos"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="ANTEBRAZOS"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/btn_hombros"
        app:layout_constraintStart_toStartOf="@+id/btn_hombros"
        app:layout_constraintTop_toBottomOf="@+id/btn_hombros" />

</androidx.constraintlayout.widget.ConstraintLayout>