<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar_general" />

    <TextView
        android:id="@+id/titulo_calendario6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calendario"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include2" />

    <TextView
        android:id="@+id/titulo_lunes_ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="LUNES"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_calendario6" />

    <Button
        android:id="@+id/btn_crear_ejercicio"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="62dp"
        android:text="CREAR EJERCICIO"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/titulo_lunes_ejercicio"
        app:layout_constraintStart_toStartOf="@+id/titulo_lunes_ejercicio"
        app:layout_constraintTop_toBottomOf="@+id/titulo_lunes_ejercicio" />

    <Button
        android:id="@+id/btn_seleccionar_ejercicio"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="SELECCIONAR EJERCICIO"
        android:textColor="@color/black"
        style="@style/EstiloBoton"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_ejercicio"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_ejercicio"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_ejercicio" />

</androidx.constraintlayout.widget.ConstraintLayout>