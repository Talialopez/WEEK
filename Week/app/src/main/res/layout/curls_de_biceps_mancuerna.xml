<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="438dp"
        android:layout_height="57dp"
        android:layout_marginBottom="724dp"
        android:background="#FDB74E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/TextoMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="#00000000"
            android:text="Calendario"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FFC774"
        android:text="Agregar"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Series" />

    <EditText
        android:id="@+id/Kg"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bordeado"
        android:ems="10"
        android:hint="    Kg"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="105dp"
        android:layout_height="26dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toBottomOf="@+id/Kg"
        app:layout_constraintStart_toStartOf="@+id/Kg"
        app:layout_constraintTop_toTopOf="@+id/Kg"
        app:srcCompat="@drawable/lapiz" />

    <EditText
        android:id="@+id/Repeticiones"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordeado"
        android:ems="10"
        android:hint="    Repeticiones"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Kg" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="105dp"
        android:layout_height="26dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toBottomOf="@+id/Repeticiones"
        app:layout_constraintStart_toStartOf="@+id/Kg"
        app:layout_constraintTop_toTopOf="@+id/Repeticiones"
        app:srcCompat="@drawable/lapiz" />

    <EditText
        android:id="@+id/Series"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bordeado"
        android:ems="10"
        android:hint="    Series a realizar"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Repeticiones" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="105dp"
        android:layout_height="26dp"
        android:layout_marginStart="220dp"
        app:layout_constraintBottom_toBottomOf="@+id/Series"
        app:layout_constraintStart_toStartOf="@+id/Kg"
        app:layout_constraintTop_toTopOf="@+id/Series"
        app:srcCompat="@drawable/lapiz" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="32dp"
        android:text="Curl de Bíceps con Mancuerna"
        android:textColor="@color/titulo_ejercicio"
        android:textSize="@dimen/text_grande"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="429dp"
        android:layout_height="207dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/curlbiceps" />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="#FFE0B2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="445dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Ayuda"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center|bottom"
                android:text="Consejos"
                android:textAlignment="gravity"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/botonconsejos"
                android:layout_width="72dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/flechaejercicio" />

        </LinearLayout>

        <View
            android:id="@+id/divider9"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFE0B2"
            app:layout_constraintEnd_toEndOf="@id/Ayuda"
            app:layout_constraintStart_toStartOf="@id/Estadisticas" />

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Estadisticas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center|bottom"
                android:text="Estadísticas" />

            <ImageView
                android:id="@+id/botonestadisticas"
                android:layout_width="72dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/flechaejercicio" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="#FFE0B2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.031" />

</androidx.constraintlayout.widget.ConstraintLayout>